{
    "compileOnSave": true,
    "compilerOptions": {
        "allowJs": true,
        "allowUnusedLabels": false,
        "allowUnreachableCode": false,
        "noUnusedLocals": true,
        "baseUrl": ".",
        "listFiles": true,
        "module": "umd",
        "moduleResolution": "node",
        "pretty": true,
        "outDir": "build/",
        "sourceRoot": "src",
        "sourceMap": false,
        "lib": [
            "es7",
            "esnext"
        ],
        "paths": {
            "controllers": [ "controllers/" ]
        }
    }
}